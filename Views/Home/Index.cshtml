@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@{
    ViewData["Title"] = "Anasayfa";
}

<h2 class="text-white">Hoş Geldin!</h2>
<p class="text-light">Bu sayfa henüz tasarlanmadı.</p>

@foreach (var ev in Model)
{
    <div class="card">
        <div class="card-body">
            <h5>@ev.Baslik</h5>
            <p>@ev.Konum</p>
            <p>@ev.Fiyat ₺</p>

            @if (ev.OrtalamaPuan > 0)
            {
                <p>
                    Puan:
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Floor(ev.OrtalamaPuan))
                        {
                            <span>★</span>
                        }
                        else
                        {
                            <span>☆</span>
                        }
                    }
                    <small>(@ev.OrtalamaPuan.ToString("0.0"))</small>
                </p>
            }
            else
            {
                <p><i>Henüz puan yok</i></p>
            }

            <a asp-action="Details" asp-route-id="@ev.Id" class="btn btn-primary">Detaylar</a>
        </div>
    </div>
}
