@{
    ViewData["Title"] = "Rezervasyon Yap";
    var house = (House)ViewBag.House;
}

<h2 class="text-white">@house.Baslik - Rezervasyon</h2>

<form asp-action="RezervasyonYap" method="post">
    <input type="hidden" name="id" value="@house.Id" />

    <div class="mb-3">
        <label class="form-label text-white">Başlangıç Tarihi:</label>
        <input type="date" name="baslangic" class="form-control bg-dark text-white border-secondary" required />
    </div>

    <div class="mb-3">
        <label class="form-label text-white">Bitiş Tarihi:</label>
        <input type="date" name="bitis" class="form-control bg-dark text-white border-secondary" required />
    </div>

    <button type="submit" class="btn btn-primary">Rezervasyonu Gönder</button>
</form>
