@model UserRegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2 class="text-white">Kayıt Ol</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Register" asp-controller="Account" method="post">
    <div class="mb-3">
        <label asp-for="Ad" class="form-label text-white"></label>
        <input asp-for="Ad" class="form-control bg-dark text-white border-secondary" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Soyad" class="form-label text-white"></label>
        <input asp-for="Soyad" class="form-control bg-dark text-white border-secondary" />
        <span asp-validation-for="Soyad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label text-white"></label>
        <input asp-for="Email" class="form-control bg-dark text-white border-secondary" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label text-white"></label>
        <input asp-for="Password" type="password" class="form-control bg-dark text-white border-secondary" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rol" class="form-label text-white"></label>
        <select asp-for="Rol" class="form-control bg-dark text-white border-secondary">
            <option value="">-- Rol Seçin --</option>
            <option value="EvSahibi">EvSahibi</option>
            <option value="Kiraci">Kiraci</option>
            <option value="Admin">Admin</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>
